global:
  scrape_interval: 10s
  evaluation_interval: 10s
scrape_configs:
  - job_name: 'prometheus_exporter'
    static_configs:
      - targets: 
          - 'localhost:9090'
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - 'localhost:9090'     
          - '{{ hostvars['prometheus']['ansible_default_ipv4']['address'] }}:9100'